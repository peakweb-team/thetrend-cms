{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "icon": "search",
    "description": "Search engine optimization metadata. All fields optional - falls back to content fields if empty."
  },
  "attributes": {
    "metaTitle": {
      "type": "string",
      "maxLength": 60,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "keywords": {
      "type": "string",
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "canonicalURL": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaRobots": {
      "type": "enumeration",
      "enum": ["index,follow", "index,nofollow", "noindex,follow", "noindex,nofollow"],
      "default": "index,follow",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "metaSocial": {
      "type": "component",
      "repeatable": true,
      "component": "shared.meta-social",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
