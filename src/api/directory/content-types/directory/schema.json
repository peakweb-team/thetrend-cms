{
  "kind": "collectionType",
  "collectionName": "directories",
  "info": {
    "singularName": "directory",
    "pluralName": "directories",
    "displayName": "Directory",
    "description": "Create directory listings with links and resources"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-text",
        "shared.media",
        "shared.quote",
        "shared.slider"
      ]
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "shared.link"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "imageAlt": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::directory-category.directory-category",
      "inversedBy": "directories"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
