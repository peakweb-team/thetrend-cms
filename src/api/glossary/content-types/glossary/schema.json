{
  "kind": "collectionType",
  "collectionName": "glossaries",
  "info": {
    "singularName": "glossary",
    "pluralName": "glossaries",
    "displayName": "Glossary",
    "description": "Define terms, acronyms, and concepts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "acronym": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-text",
        "shared.media",
        "shared.quote",
        "shared.slider"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "imageAlt": {
      "type": "string"
    },
    "category": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::glossary-category.glossary-category",
      "inversedBy": "glossaries"
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "shared.link"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
