{
  "kind": "collectionType",
  "collectionName": "glossary_categories",
  "info": {
    "singularName": "glossary-category",
    "pluralName": "glossary-categories",
    "displayName": "Glossary Category",
    "description": "Organize glossary entries into categories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "glossaries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::glossary.glossary",
      "mappedBy": "category"
    }
  }
}
