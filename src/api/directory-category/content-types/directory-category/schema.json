{
  "kind": "collectionType",
  "collectionName": "directory_categories",
  "info": {
    "singularName": "directory-category",
    "pluralName": "directory-categories",
    "displayName": "Directory Category",
    "description": "Organize directory entries into categories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "directories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::directory.directory",
      "mappedBy": "category"
    }
  }
}
